{
  "openapi": "3.0.0",
  "info": {
    "title": "POC API",
    "version": "1.0.0",
    "description": "Documentation de l'API POC"
  },
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "username",
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Validation error"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login with email and password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "identifier",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logged in successfully"
          },
          "400": {
            "description": "User not found or invalid credentials"
          },
          "401": {
            "description": "Invalid password"
          }
        }
      }
    },
    "/api/auth/verify": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Verify JWT token",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token is valid"
          },
          "401": {
            "description": "Unauthorized / token invalid"
          }
        }
      }
    },
    "/api/user/": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get current authenticated user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Authenticated user info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/user/{id}": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "User ID"
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/user/all": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get all users",
        "responses": {
          "200": {
            "description": "List of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "username": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user": {
      "patch": {
        "tags": [
          "User"
        ],
        "summary": "Update user profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Profile updated"
          },
          "400": {
            "description": "Validation error"
          }
        }
      },
      "delete": {
        "tags": [
          "User"
        ],
        "summary": "Delete user account",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Account deleted"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/userGuides": {
      "post": {
        "tags": [
          "Guides"
        ],
        "summary": "Add a guide for the authenticated user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "guide": {
                    "type": "string",
                    "description": "Guide name"
                  }
                },
                "required": [
                  "guide"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Guide added",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "userGuide": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "description": "Guide UUID"
                        },
                        "user_id": {
                          "type": "string",
                          "description": "User UUID"
                        },
                        "guide": {
                          "type": "string",
                          "description": "Guide name"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Guide name required"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/UserGuides/all": {
      "get": {
        "tags": [
          "Guides"
        ],
        "summary": "Get all user guides",
        "responses": {
          "200": {
            "description": "List of user guides",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "Guide UUID"
                      },
                      "user_id": {
                        "type": "string",
                        "description": "User UUID"
                      },
                      "guide": {
                        "type": "string",
                        "description": "Guide name"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/userGuides/{user_id}": {
      "get": {
        "tags": [
          "Guides"
        ],
        "summary": "Get guides by user_id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "User UUID"
          }
        ],
        "responses": {
          "200": {
            "description": "List of guides for user_id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "user_id": {
                        "type": "string"
                      },
                      "guide": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/userGuides/guide/{guide}": {
      "get": {
        "tags": [
          "Guides"
        ],
        "summary": "Get guides by guide name",
        "parameters": [
          {
            "name": "guide",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Guide name"
          }
        ],
        "responses": {
          "200": {
            "description": "List of guides for guide name",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "user_id": {
                        "type": "string"
                      },
                      "guide": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/userGuides/username/{user_name}": {
      "get": {
        "tags": [
          "Guides"
        ],
        "summary": "Get guides by user_name (no token)",
        "parameters": [
          {
            "name": "user_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "User name"
          }
        ],
        "responses": {
          "200": {
            "description": "List of guides for user_name",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "user_id": {
                        "type": "string"
                      },
                      "guide": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/userGuides/{user_id}/{guide_id}": {
      "delete": {
        "tags": [
          "Guides"
        ],
        "summary": "Delete a guide (only if user is owner)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "User UUID (must match token)"
          },
          {
            "name": "guide_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Guide UUID"
          }
        ],
        "responses": {
          "200": {
            "description": "Guide deleted"
          },
          "403": {
            "description": "Forbidden: You can only delete your own guides."
          },
          "404": {
            "description": "Guide not found or not yours"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/caught/list/{guide_id}": {
      "get": {
        "tags": [
          "Caught"
        ],
        "summary": "Get all Pokémon caught in a guide (owned by connected user)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "guide_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Guide UUID"
          }
        ],
        "responses": {
          "200": {
            "description": "List of Pokémon IDs caught in the guide",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "guide_id": {
                      "type": "string"
                    },
                    "pokemons": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "description": "Pokémon ID (format '001' à '151')"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Guide not found"
          },
          "403": {
            "description": "Access denied to this guide"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/caught": {
      "post": {
        "tags": [
          "Caught"
        ],
        "summary": "Add a caught Pokémon for the authenticated user and guide",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "guide_id": {
                    "type": "string",
                    "description": "Guide UUID"
                  },
                  "pokemon_id": {
                    "type": "string",
                    "description": "Pokémon ID (format '001' à '151')"
                  }
                },
                "required": [
                  "guide_id",
                  "pokemon_id"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pokémon caught",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error (missing fields, bad format, or already caught)"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "delete": {
        "tags": [
          "Caught"
        ],
        "summary": "Delete a caught Pokémon for the authenticated user and guide",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "guide_id": {
                    "type": "string",
                    "description": "Guide UUID"
                  },
                  "pokemon_id": {
                    "type": "string",
                    "description": "Pokémon ID (format '001' à '151')"
                  }
                },
                "required": [
                  "guide_id",
                  "pokemon_id"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pokémon deleted from guide",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Pokémon not found in guide"
          },
          "400": {
            "description": "Validation error (missing fields, bad format)"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication routes"
    },
    {
      "name": "User",
      "description": "User management routes"
    },
    {
      "name": "Guides",
      "description": "User guides managements"
    },
    {
      "name": "Caught",
      "description": "Pokémon caught management"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}